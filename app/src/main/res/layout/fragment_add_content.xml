<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragment.AddContentFragment">
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noto_medium"
        android:text="@string/add_content"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_coin"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@drawable/coin" />

            <TextView
                android:id="@+id/tv_coin_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginStart="4dp"
                android:fontFamily="@font/noto_medium"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_back">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/llOnlineShop"
                android:layout_width="@dimen/margin_10dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/content_bg"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_basket"/>
                <TextView
                    android:id="@+id/tv_forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:fontFamily="@font/noto_medium"
                    android:text="Help Online\n
Shop (Buy)"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_shop"
                android:layout_width="@dimen/margin_10dp"
                android:layout_height="match_parent"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/content_bg"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_cart"/>
                <TextView
                    android:id="@+id/tv_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:fontFamily="@font/noto_medium"
                    android:text="Help Online\n
Shop (Browse)"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_add_blog"
                android:layout_width="@dimen/margin_10dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/content_bg"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_notes"/>
                <TextView
                    android:id="@+id/tv_blog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:fontFamily="@font/noto_medium"
                    android:text="Help\n
Blog"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_add_cafe"
                android:layout_width="@dimen/margin_10dp"
                android:layout_height="match_parent"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/content_bg"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_cafe"/>
                <TextView
                    android:id="@+id/tv_cafe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:fontFamily="@font/noto_medium"
                    android:text="Help\n
Cafe"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>