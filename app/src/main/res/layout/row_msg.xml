<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/receiver_bg"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <TextView
                android:id="@+id/tv_receiver_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:fontFamily="@font/noto_regular"
                android:text="Kookmin Bank"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_receiver_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="7dp"
                android:fontFamily="@font/noto_regular"
                android:gravity="end"
                android:text="13:32"
                android:textColor="#BEBEBE"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/receiver_bg"
            android:backgroundTint="@color/app_color"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <TextView
                android:id="@+id/tv_sender_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:fontFamily="@font/noto_regular"
                android:text="Bank Details\n
1245 5285 4585 xxxx
"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_sender_msg_time"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="7dp"
                android:fontFamily="@font/noto_regular"
                android:gravity="end"
                android:text="13:32"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>