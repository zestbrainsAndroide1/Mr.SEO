<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:paddingBottom="@dimen/_20sdp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="@dimen/_16sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20dp"
                android:alpha="0.7"
                android:layout_marginTop="@dimen/margin_24dp"
                android:fontFamily="@font/noto_regular"
                android:text="@string/id"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp"
                />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20dp"
                android:fontFamily="@font/noto_medium"
                android:text="anson@gmail.com"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/line_second"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="19dp"
                android:layerType="software"
                android:src="@drawable/dot_line"
               />


            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:alpha="0.7"
                android:fontFamily="@font/noto_regular"
                android:text="@string/bank_name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp"
                 />

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20dp"
                android:fontFamily="@font/noto_medium"
                android:text="ACE Bank"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"
              />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="19dp"
                android:layerType="software"
                android:src="@drawable/dot_line"
              />


            <TextView
                android:id="@+id/tv_bank_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:alpha="0.7"
                android:fontFamily="@font/noto_regular"
                android:text="@string/bank_account_no"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp"
                 />

            <TextView
                android:id="@+id/tv_bank_acc_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20dp"
                android:fontFamily="@font/noto_medium"
                android:text="00xxxx52034"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"
               />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="19dp"
                android:layerType="software"
                android:src="@drawable/dot_line"
               />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_proof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:alpha="0.7"
                    android:fontFamily="@font/noto_regular"
                    android:text="@string/proof"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp"
                     />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:fontFamily="@font/noto_medium"
                    android:gravity="end"
                    android:text="Yes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_copy"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_22sdp"
                android:text="@string/copy"
                android:paddingTop="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/noto_bold"
                android:textSize="@dimen/text_size_12sp"
                android:background="@drawable/round_corner"
                 />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_46dp"
                android:layout_marginTop="@dimen/margin_26dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cash_sent"
                    android:layout_width="0dp"
                    android:text="@string/cash_sent"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:fontFamily="@font/noto_bold"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/help_bg"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_view_proofs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/view_proofs"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/noto_bold"
                    android:textSize="@dimen/text_size_12sp"
                    android:background="@drawable/help_bg"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_finished"
                    android:layout_width="0dp"
                    android:enabled="false"
                    android:layout_height="match_parent"
                    android:text="@string/finished"
                    android:textColor="@color/white"
                    android:fontFamily="@font/noto_bold"
                    android:textSize="@dimen/text_size_12sp"
                    android:background="@drawable/help_bg"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_chat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/go_to_chat"
                    android:textColor="@color/white"
                    android:fontFamily="@font/noto_bold"
                    android:textSize="@dimen/text_size_12sp"
                    android:background="@drawable/help_bg"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_weight="1" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_post"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:orientation="horizontal">
                <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                    android:id="@+id/img_product"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:siShape="@drawable/round" />

                <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                    android:id="@+id/img_first_product"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_marginStart="@dimen/margin_10dp"
                    app:siShape="@drawable/round" />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvConfirm"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/app_color"
                app:cardCornerRadius="5dp"
                app:cardElevation="@dimen/_2sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/con"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/noto_semi_bold"
                        android:gravity="center"
                        android:text="@string/confirm"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

