<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PostDetailActivity">
    <ImageView
        android:id="@+id/img_back_post_detail"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />
    <TextView
        android:id="@+id/tv_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noto_medium"
        android:text="Help Online Shop (Buy)"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/img_back_post_detail"
app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_open_market1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_57dp"
        android:fontFamily="@font/noto_regular"
        android:alpha="0.7"
        android:layout_marginStart="@dimen/margin_20dp"
        android:text="@string/open_market"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_57dp"
        android:fontFamily="@font/noto_regular"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <ImageView
        android:id="@+id/line_first1"
        android:layout_width="match_parent"
        android:layout_height="5dp"

        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="22dp"
        android:layerType="software"
        android:src="@drawable/dot_line"
        app:layout_constraintTop_toBottomOf="@id/tv_open_market1" />


    <TextView
        android:id="@+id/tv_keyword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:fontFamily="@font/noto_regular"
        android:alpha="0.7"
        android:layout_marginStart="@dimen/margin_20dp"
        android:text="@string/keyword"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintTop_toBottomOf="@id/line_first1"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_keyword_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:fontFamily="@font/noto_regular"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_first1"/>


    <ImageView
        android:id="@+id/line_second"
        android:layout_width="match_parent"
        android:layout_height="5dp"

        android:layout_marginStart="22dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="22dp"
        android:layerType="software"
        android:src="@drawable/dot_line"
        app:layout_constraintTop_toBottomOf="@id/tv_keyword1" />


    <TextView
        android:id="@+id/tv_shopping_mall1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:fontFamily="@font/noto_regular"
        android:alpha="0.7"
        android:layout_marginStart="@dimen/margin_20dp"
        android:text="@string/shopping_mall_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintTop_toBottomOf="@id/line_second"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_shopping_mall_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:fontFamily="@font/noto_regular"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_second"/>


    <ImageView
        android:id="@+id/line_third"
        android:layout_width="match_parent"
        android:layout_height="5dp"

        android:layout_marginStart="22dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="22dp"
        android:layerType="software"
        android:src="@drawable/dot_line"
        app:layout_constraintTop_toBottomOf="@id/tv_shopping_mall1" />


<LinearLayout
    android:id="@+id/ll_desc"
    android:layout_width="match_parent"
    app:layout_constraintTop_toBottomOf="@id/line_third"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:fontFamily="@font/noto_regular"
            android:alpha="0.7"

            android:layout_marginStart="@dimen/margin_20dp"
            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16sp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <TextView
        android:id="@+id/tv_description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:layout_marginTop="@dimen/margin_24dp"
        android:fontFamily="@font/noto_regular"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_third"/>
    </LinearLayout>

</LinearLayout>


    <ImageView
        android:id="@+id/line_fourth"
        android:layout_width="match_parent"
        android:layout_height="5dp"

        android:layout_marginStart="22dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="22dp"
        android:layerType="software"
        android:src="@drawable/dot_line"
        app:layout_constraintTop_toBottomOf="@id/ll_desc" />


    <TextView
        android:id="@+id/tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:fontFamily="@font/noto_regular"
        android:alpha="0.7"

        android:layout_marginStart="@dimen/margin_20dp"
        android:text="@string/remaining_points"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintTop_toBottomOf="@id/line_fourth"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_remaining_points1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:fontFamily="@font/noto_regular"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_fourth"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvApplyForHelp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/app_color"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_remaining_points1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/noto_semi_bold"
                android:gravity="center"
                android:text="@string/apply_for_help"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>